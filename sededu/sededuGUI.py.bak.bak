import Tkinter as tk
import random
from . import guiUtils as gui

root = tk.Tk()
root.wm_title("SedEdu")
w = 1000 #
h = 800 # make these intelligent to screen size with other package?
o = 100 #
root.geometry(str(w) + "x" + str(h) + "+" + str(o) + "+" + str(o)) # width x height + x_offset + y_offset:

categories = ["Rivers", "Deltas", "Deserts", "Coasts", 
    "Stratigraphy", "Behind the \nModules"] # read these from file?
buttons = range(len(categories))

## geometry manager for main window
menuBox = tk.Frame(root, borderwidth=2, relief="solid")
etcBox = tk.Frame(root, borderwidth=2, relief="solid")

menuBox.pack(side="top", expand=True, fill="both")
etcBox.pack(side="bottom", expand=False, fill="both")

## geometry manager for menuBox
windowGeom = gui.placement.geomObj(0, 0, w, h)
geomButton = gui.placement.gridButton(len(categories), windowGeom)

## materials for etcBox
quitButton = gui.stdButtons.quitButton
quitButton.pack()

# gridMargs = gui.placement.margins(windowGeom) # workable area margins
# gridWork = gui.placement.divideWindow(gridMargs)
# gridPlace = gui.placement.gridButton(len(categories), gridWork)
# print [gridWork.x, gridWork.y, gridWork.w, gridWork.h]

nRows = len(categories) / 2

for i in buttons:
    ct = [random.randrange(256) for x in range(3)]
    brightness = int(round(0.299*ct[0] + 0.587*ct[1] + 0.114*ct[2]))
    ct_hex = "%02x%02x%02x" % tuple(ct)
    bg_colour = '#' + "".join(ct_hex)
    l = tk.Button(menuBox, 
            text=categories[i], font=("Courier", int(geomButton.h*0.1)),
            fg='White' if brightness < 120 else 'Black', 
            bg=bg_colour, height=3)
    # l.place(x = gridPlace.x[i], y = gridPlace.y[i], width=gridPlace.w, height=gridPlace.h)
    l.grid(row=i if i<nRows else i-nRows, column=0 if i<nRows else 1, 
        padx=10, pady=10)

